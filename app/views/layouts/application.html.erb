<style type="text/css">
  body {
      position: relative;
  }

  body:after {
      content : "";
      display: block;
      position: fixed;
      top: 0;
      left: 0;
      background-image: url("<%= image_pack_url('bg.jpg')%>");
      background-size: cover;
      width: 100%;
      height: 100%;
      opacity : 0.4;
      z-index: -1;
  }

  .footer{
      width: 100%;
      height: 40px;
      line-height: 40px;
      text-align: center;
      margin: 0px auto;
      position: absolute;

  }
</style>
